<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D6D6D6"
        tools:context=".MainActivity" android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <include
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                layout="@layout/toolbar_search" android:id="@+id/include"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />

        <TextView
                android:text="Total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:layout_marginTop="16dp" android:textSize="18sp"
                android:textStyle="bold" app:layout_constraintTop_toBottomOf="@+id/include"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/vg_current_affinities"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ascendant_icon"
                    android:id="@+id/iv_ascendant_current"
                    android:layout_marginStart="16dp"/>
            <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_ascendant_current"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/chaos_icon"
                    android:id="@+id/iv_chaos_current"
                    android:layout_marginStart="16dp"
            />
            <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_chaos_current"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/eldritch_icon"
                    android:id="@+id/iv_eldritch_current"
                    android:layout_marginStart="16dp"
            />
            <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_eldritch_current"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/order_icon"
                    android:id="@+id/iv_order_current"
                    android:layout_marginStart="16dp"
            />
            <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_order_current"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/primordial_icon"
                    android:id="@+id/iv_primordial_current"
                    android:layout_marginStart="16dp"/>
            <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_primordial_current"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <TextView
                android:text="Points Used: 0 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_points_used" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:textSize="18sp" app:layout_constraintTop_toBottomOf="@+id/include"
                android:layout_marginTop="16dp"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                tools:context=".MainActivity" android:id="@+id/rv_constellations"
                tools:listitem="@layout/view_constellation"
                app:layout_constraintTop_toBottomOf="@+id/vg_current_affinities"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"/>
        <com.myriadmobile.searchview.MMSearchView android:layout_width="match_parent"
                                                  android:layout_height="0dp"
                                                  app:layout_constraintEnd_toEndOf="parent"
                                                  app:layout_constraintStart_toStartOf="@+id/include"
                                                  app:layout_constraintBottom_toBottomOf="@+id/include"
                                                  app:layout_constraintTop_toTopOf="@+id/include"
                                                  android:visibility="invisible"
                                                  android:id="@+id/search_view"
                                                  app:searchFilters="ignoreCase|ignoreSpecialCharacters|ignoreSpaces"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>